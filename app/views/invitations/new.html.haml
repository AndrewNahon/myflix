%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, html: { class: 'invite' } do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .row
            .col-sm-4
              = f.text_field :recipient_name, label: "Friend's name"
          .row
            .col-sm-4
              = f.email_field :recipient_email, label: "Friend's email"
          .row
            .col-sm-4
              = f.text_area :message, class: "span4", rows: 6, placeholder: "You should join this cool site!", label: 'Leave a message'
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
