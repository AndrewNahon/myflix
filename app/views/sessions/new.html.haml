%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: sessions_path, label_col: "col-sm-2", control_col: "col-sm-2", class: "sign_in" do |f|
        %header
          %h1 Sign in
        = f.email_field :email, placeholder: 'name@exmaple.com', control_col: "col-sm-1"
        = f.password_field :password
        = f.submit 'Sign in', class: 'btn btn-default'
        = link_to 'Forgot password?', forgot_password_path
